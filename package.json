  "engines": {
    "node": "16",
    "npm": "8"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.0",
    "bcrypt": "^5.0.1",
    "client": "file:client",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "dotenv": "^16.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "gravatar": "^1.8.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "request": "^2.88.2",
    "timediff": "^1.1.1"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.15"
  }
